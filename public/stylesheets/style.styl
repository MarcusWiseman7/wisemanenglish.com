@import 'public/styl/*'

html 
  font-family 'Lato', sans-serif !important

#teachers
  background-color bgcream
  color wedark 
  padding-top 4rem
  padding-bottom 4rem
  padding-left 10% 
  padding-right 10% 
  img
    width 50%
    height auto
  h2 
    font-size 4rem
    font-weight bold
  h6  
    text-align right
    font-family 'Dancing Script', cursive
    font-size 1.5rem
    letter-spacing 1px
    line-height 1.5em
  #book 
    padding-top 3rem
    h4 
      padding-right 20px
#contact-bar
  background-color weblue 
  color bgcream
  text-align center
  padding-top 3rem
  padding-bottom 3rem
  a 
    color bgcream
    font-family 'Dancing Script', cursive
    font-size 2rem
    :hover
      color weblue 
#quote 
  background-color weblue
  color bgcream
  text-align center
  letter-spacing 1.5px
  padding-top 3rem
  padding-bottom 3rem
  h2 
    font-family 'Playfair Display', serif
    font-style italic
    font-weight bold

.footer 
  padding-top 5rem
  padding-bottom 5rem
  background-color wedark 
  color bgcream  
  a  
    color bgcream
    :hover
      color weblue 
